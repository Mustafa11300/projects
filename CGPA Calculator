<html>
<head>
<title>CGPA Calculator</title>
<style>
body {
  font-family: sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.cgpa-calculator {
  border: 1px solid #ccc;
  padding: 20px;
  border-radius: 5px;
}

.cgpa-calculator h2 {
  margin-bottom: 20px;
}

.input-field {
  margin-bottom: 15px;
}

.input-field label {
  display: block;
  margin-bottom: 5px;
}

.input-field input,
.input-field select {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 3px;
}

.input-field button {
  padding: 8px 15px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 3px;
  cursor: pointer;
}

.subject-table {
  margin-top: 20px;
  border-collapse: collapse;
  width: 100%;
}

.subject-table th,
.subject-table td {
  text-align: left;
  padding: 8px;
  border: 1px solid #ccc;
}

.subject-table th {
  background-color: #f0f0f0;
}

.action-buttons button {
  padding: 5px 10px;
  margin: 0 5px;
  background-color: #f44336;
  color: white;
  border: none;
  border-radius: 3px;
  cursor: pointer;
}

.action-buttons button.edit {
  background-color: #4CAF50;
}

.cgpa-result {
  margin-top: 20px;
}
